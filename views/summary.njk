{% extends "layout.njk" %}
{% block content %}
  <h2 class="mb-3">Check your answers</h2>
  <p class="mb-4">Review the details before submitting.</p>

  <div class="mb-4">
    <h3 class="h5">Contact details</h3>
    <dl class="row">
      <dt class="col-sm-3">First name</dt>
      <dd class="col-sm-9">{{ contact.firstName }}</dd>
      <dt class="col-sm-3">Last name</dt>
      <dd class="col-sm-9">{{ contact.lastName }}</dd>
      <dt class="col-sm-3">Email</dt>
      <dd class="col-sm-9">{{ contact.email }}</dd>
      <dt class="col-sm-3">Phone</dt>
      <dd class="col-sm-9">{{ contact.phone | default('—') }}</dd>
    </dl>
  </div>

  <div class="mb-4">
    <h3 class="h5">Address details</h3>
    <dl class="row">
      <dt class="col-sm-3">Address line 1</dt>
      <dd class="col-sm-9">{{ address.addressLine1 }}</dd>
      <dt class="col-sm-3">Address line 2</dt>
      <dd class="col-sm-9">{{ address.addressLine2 | default('—') }}</dd>
      <dt class="col-sm-3">Town or city</dt>
      <dd class="col-sm-9">{{ address.townOrCity }}</dd>
      <dt class="col-sm-3">County</dt>
      <dd class="col-sm-9">{{ address.county | default('—') }}</dd>
      <dt class="col-sm-3">Postcode</dt>
      <dd class="col-sm-9">{{ address.postcode }}</dd>
    </dl>
  </div>

  <form method="post" action="/submit" class="mt-3">
    <button type="submit" class="btn btn-success">Submit registration</button>
  </form>
{% endblock %}